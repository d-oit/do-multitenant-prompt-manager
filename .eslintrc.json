{
  "root": true,
  "env": {
    "es2022": true
  },
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["@typescript-eslint"],
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended"
  ],
  "rules": {
    "no-console": [
      "warn",
      {
        "allow": ["warn", "error"]
      }
    ],
    "@typescript-eslint/no-unused-vars": [
      "error",
      {
        "argsIgnorePattern": "^_",
        "varsIgnorePattern": "^_"
      }
    ]
  },
  "overrides": [
    {
      "files": ["frontend/**/*.{ts,tsx}", "frontend/**/*.tsx"],
      "env": {
        "browser": true
      },
      "parserOptions": {
        "ecmaFeatures": {
          "jsx": true
        }
      },
      "plugins": ["@typescript-eslint", "react", "react-hooks", "jsx-a11y"],
      "extends": [
        "plugin:react/recommended",
        "plugin:react-hooks/recommended",
        "plugin:jsx-a11y/recommended"
      ],
      "settings": {
        "react": {
          "version": "detect"
        }
      },
      "rules": {
        "react/react-in-jsx-scope": "off",
        "react/prop-types": "off"
      }
    },
    {
      "files": ["worker/**/*.{ts,tsx}"],
      "env": {
        "worker": true
      }
    },
    {
      "files": ["worker/src/lib/logger.ts"],
      "rules": {
        "no-console": "off"
      }
    },
    {
      "files": ["frontend/src/lib/logger.ts"],
      "rules": {
        "no-console": "off"
      }
    },
    {
      "files": ["**/*.{test,spec}.{ts,tsx}", "**/__tests__/**/*.{ts,tsx}"],
      "env": {
        "node": true
      }
    }
  ]
}
