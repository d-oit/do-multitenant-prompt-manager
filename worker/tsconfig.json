{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "node",
    "baseUrl": ".",
    "strict": true,
    "noEmit": true,
    "types": ["@cloudflare/workers-types"],
    "lib": ["ES2022"],
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts", "test/**/*.ts", "../shared/**/*.ts"],
  "paths": {
    "../../shared/*": ["../shared/*"]
  }
}
